@{
    var pais = ViewData["Pais"] as Pais;
}




<h2>Nuevo País</h2>

<br />
<form asp-action="ActualizarPais" asp-controller="Home">

    <div class="form-group">
        <label for="Id">Id</label>
        <input type="text" class="form-control" id="Id" name="Id" placeholder="Id" value="@pais.Id" readonly/>
    </div>

    <div class="form-group">
        <label for="Nombre">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Nombre" value="@pais.Nombre" required />
    </div>
    <div class="form-row">
        <div class="col">
            <input type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Home")'" value="Cancelar" />
        </div>
        <div class="col">
            <button type="submit" class="btn btn-success">Guardar</button>
        </div>
    </div>
</form>
